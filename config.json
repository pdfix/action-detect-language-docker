{
    "name": "Detect Language",
    "version": "v0.0.0",
    "actions": [
        {
            "title": "Detect PDF Language (LangDetect)",
            "name": "pdfix_detect_pdf_language_langdetect",
            "desc": "Automatically detects the language of a PDF and updates its metadata [Local]",
            "version": "v0.0.0",
            "icon": "language",
            "category": "Metadata",
            "local": "True",
            "program": "docker run -v ${working_directory}:/data -w /data --rm pdfix/detect-language:latest lang-detect --name \"${license_name}\" --key \"${license_key}\" -i \"/data/${input_pdf}\" -o \"/data/${output_pdf}\"",
            "args": [
                {
                    "name": "input_pdf",
                    "desc": "Input PDF file",
                    "flags": 2,
                    "type": "file_path",
                    "ext": "pdf",
                    "value": ""
                },
                {
                    "name": "output_pdf",
                    "desc": "Output PDF file",
                    "flags": 4,
                    "type": "file_path",
                    "ext": "pdf",
                    "value": ""
                }
            ]
        },
        {
            "title": "Detect Language from PDF to Text (LangDetect)",
            "name": "pdfix_detect_pdf_language_to_text_langdetect",
            "desc": "Automatically detects the language of a PDF and saves the detected language code to a TXT file [Local]",
            "version": "v0.0.0",
            "icon": "language_txt",
            "category": "Metadata",
            "local": "True",
            "program": "docker run -v ${working_directory}:/data -w /data --rm pdfix/detect-language:latest lang-detect -i \"/data/${input_pdf}\" -o \"/data/${output_txt}\"",
            "args": [
                {
                    "name": "input_pdf",
                    "desc": "Input PDF file",
                    "flags": 2,
                    "type": "file_path",
                    "ext": "pdf",
                    "value": ""
                },
                {
                    "name": "output_txt",
                    "desc": "Output text file containing the detected language code",
                    "flags": 4,
                    "type": "file_path",
                    "ext": "txt",
                    "value": ""
                }
            ]
        },
        {
            "title": "Detect Language from Text to Text (LangDetect)",
            "name": "pdfix_detect_pdf_language_to_text_langdetect",
            "desc": "Automatically detects the language from text and saves the detected language code to a TXT file [Local]",
            "version": "v0.0.0",
            "icon": "language_txt_txt",
            "category": "Metadata",
            "subtype": "detect_language_txt_to_txt",
            "local": "True",
            "program": "docker run -v ${working_directory}:/data -w /data --rm pdfix/detect-language:latest lang-detect -i \"/data/${input_txt}\" -o \"/data/${output_txt}\"",
            "args": [
                {
                    "name": "input_txt",
                    "desc": "Input text file",
                    "flags": 2,
                    "type": "file_path",
                    "ext": "txt",
                    "value": ""
                },
                {
                    "name": "output_txt",
                    "desc": "Output text file containing the detected language code",
                    "flags": 4,
                    "type": "file_path",
                    "ext": "txt",
                    "value": ""
                }
            ]
        }
    ]
}
